<div class="wrapper">
	<div class="header">
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			  ga('create', 'UA-72046008-1', 'auto');
			  ga('send', 'pageview');
		</script>
		<div class="top">
			<nav>
				<header>
					<%= link_to("",{:action => 'index'}, :class => 'logo') %>
				</header>
				
				<ul>
					<%= link_to "Login", :login %>
					<%= link_to("View Reports", {:controller => 'main', :action => 'show'}) %>
					<%= link_to("Home", {:controller => 'main', :action => 'index'}) %>
				</ul>
			</nav>
		</div>
	</div>
	
	<div class="content">
		<% if !flash[:alert].blank? %>
		
			<div class="notice">
				<% flash[:alert].each_with_index do |message, index| %>
					<p><%= message %></p>
				<% end %>
			</div>
			
		<% end %>
		<%= stylesheet_link_tag("http://yui.yahooapis.com/pure/0.6.0/pure-min.css") %>
		<%= form_for @user, :url => password_reset_path(@token), :html => {:method => :put} do |f| %>
		<div id="register" class='pure-form pure-form-aligned'>
			<fieldset>

				<div class="pure-control-group">
					<label><%= f.label(:email, "Email") %></label>
					<%= f.text_field(:email) %>
				</div>
				
				<div class="pure-control-group">
					<label><%= f.label(:password, "Password") %></label>
					<%= f.password_field(:password) %>
				</div>
				
				<div class="pure-control-group">
					<label><%= f.label(:password_confirmation, "Password Confirmation") %></label>
					<%= f.password_field(:password_confirmation) %>
				</div>
				
				<div class="pure-controls">
					<%= submit_tag("Submit", :class => "pure-button pure-button-primary") %>
				</div>
			</fieldset>
		</div>
		
		<% end %>
	</div>
	<div class="footer">
		<footer>
			<p>&copy; RailAware 2016</p>
			<div class="contact">
				<%= link_to("","https://www.facebook.com/RailAware/", :class => 'fb') %>
				<%= mail_to "railaware@outlook.com", "", :class => 'mail' %>
			</div>
		</footer>
	</div>
</div>