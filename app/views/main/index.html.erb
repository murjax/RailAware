<div class="wrapper">
	<div class="header">
		<div class="top">
			<nav>
				<header>
					<%= link_to("Railaware", {:action => 'index'}, :class => 'logo') %>
				</header>

				<ul>
					<%= link_to("Home", {:action => 'index'}) %>
					<%= link_to("View Reports", {:action => 'show'}) %>
					<% if current_user %>
						<%= link_to("Report A Train", {:action => 'report'}) %>
						<%= link_to "Logout", :logout, method: :post %>
					<% else %>
						<%= link_to "Login", :login %>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
	
	<div class="content">
		<%= javascript_include_tag('//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region=') %>
		<%= javascript_include_tag('markerclusterer_packed.js') %>
		<%= javascript_include_tag('infobox_packed.js') %>
		
		<div>
		  <div id="map">
			<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
			<!-- RailAware Footer Ad -->
			<ins class="adsbygoogle"
				 style="display:block"
				 data-ad-client="ca-pub-2425105974442630"
				 data-ad-slot="7685474149"
				 data-ad-format="auto"></ins>
			<script>
			(adsbygoogle = window.adsbygoogle || []).push({});
			</script>
		  </div>
		</div>
		<script type="text/javascript">
			handler = Gmaps.build('Google');
			handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
			  markers = handler.addMarkers(<%=raw @hash.to_json %>);
			  handler.bounds.extendWith(markers);
			  handler.fitMapToBounds();
			  handler.getMap().setZoom(4);
			  var mapcenter = new google.maps.LatLng(39.828215,-98.5817593);
			  handler.getMap().setCenter(mapcenter);
			});
			
		</script>
		
	</div>
	
	<div class="ads"></div>
	
	<div class="footer">
		<footer>
			<p>&copy; RailAware 2016</p>
		</footer>
	</div>
</div>