<div class="wrapper">
	<div class="header">
	
		<div class="top">
			<nav>
				<header>
					<%= link_to("",{:action => 'index'}, :class => 'logo') %>
				</header>

				
				
				<ul>
					
					<% if current_user %>
						<%= link_to "Logout", :logout, method: :post %>
						<%= link_to("Report A Train", {:action => 'report'}) %>
						
					<% else %>
						<%= link_to "Login", :login %>
					<% end %>
					<%= link_to("View Reports", {:action => 'show'}) %>
					<%= link_to("Home", {:action => 'index'}) %>
					
				</ul>
				
			</nav>
		</div>
	</div>
	
	<div class="content">
		<div>
		  <div id="map"></div>
		</div>
		<script type="text/javascript">
			handler = Gmaps.build('Google');
			handler.buildMap({provider: {}, internal: {id: 'map'}}, function(){
			  markers = handler.addMarkers(<%=raw @hash.to_json %>);
			  handler.bounds.extendWith(markers);
			  handler.fitMapToBounds();
			  handler.getMap().setZoom(4);
			  var mapcenter = new google.maps.LatLng(39.828215,-98.5817593);
			  handler.getMap().setCenter(mapcenter);
			});
			
		</script>
	</div>
	
	<div class="ads">
		<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
		<!-- RailAware Footer Ad -->
		<ins class="adsbygoogle"
			 style="display:block"
			 data-ad-client="ca-pub-2425105974442630"
			 data-ad-slot="7685474149"
			 data-ad-format="auto"></ins>
		<script>
		(adsbygoogle = window.adsbygoogle || []).push({});
		</script>
	</div>
	
	<div class="footer">
		<footer>
			<p>&copy; RailAware 2016</p>
		</footer>
	</div>
</div>